{
  "name": "GitWho",
  "displayName": "GitWho",
  "description": "Allows user to see all contributors to a file",
  "version": "0.0.1",
  "publisher": "VigilVanDijk",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "mainIcon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/VigilVanDijk/GitWho"
  },
  "homepage": "https://github.com/VigilVanDijk/GitWho",
  "activationEvents": [
  "onCommand:extension.showAuthorChanges"
],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "GitWho.showAuthorChanges",
        "title": "Show Changes by Author"
      }
    ]
  },
  "viewsContainers": {
      "activitybar": [
        {
          "id": "gitWhoSidebar",
          "title": "GitWho",
          "icon": "media/sidebar_icon.svg"
        }
      ]
    },
    "views": {
      "gitWhoSidebar": [
        {
          "id": "gitWhoView",
          "name": "Author Changes"
        }
      ]
    },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
